llm:
  api_key: "${OPENAI_API_KEY}"
  base_url: "${OPENAI_BASE_URL}"
  model: "${OPENAI_MODEL}"
  max_tokens: 4000
  temperature: 0.7
  
  # 备用配置
  fallback_api_key: "${FALLBACK_API_KEY}"
  fallback_base_url: "${FALLBACK_BASE_URL}"
  fallback_model: "${FALLBACK_MODEL}"

analysis:
  # 估值方法
  valuation_methods: ["PE", "DCF"]
  
  # 是否进行情景分析
  scenario_analysis: true
  
  # 是否进行同行比较
  peer_comparison: true
  
  # 财务分析年数
  analysis_years: 3
  
  # 预测年数
  forecast_years: 3

output:
  # 是否包含图表
  include_charts: true
  
  # 详细分析
  detailed_analysis: true
  
  # 输出格式
  formats: ["json", "markdown"]
  
  # 报告语言
  language: "zh-CN"

data_sources:
  # 主要数据源
  primary: "akshare"
  
  # 财务数据获取方式
  financial_data:
    statements: true  # 财务报表
    ratios: true      # 财务比率
    forecasts: true   # 业绩预测
    
  # 同行业数据
  industry_data:
    enabled: true
    max_competitors: 5
